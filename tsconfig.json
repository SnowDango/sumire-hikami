{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "views/**/*"
  ],
}